<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/head_text_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/head_text_color"
        android:padding="@dimen/dp16">

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_tourist_type"
            android:layout_width="27dp"
            android:layout_height="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8"
            android:layout_toRightOf="@id/tv_date_time"
            android:background="@drawable/bg_tourist_type_style"
            android:gravity="center"
            android:textColor="@color/bg_verification_color"
            android:textSize="10sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp8"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp15" />

        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_order_status"
            android:layout_marginTop="@dimen/dp8"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/tv_order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date_time"
            android:layout_marginRight="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8"
            android:layout_toLeftOf="@id/iv_arrow_right"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_address"
            android:layout_marginTop="@dimen/dp8"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_order_address"
            android:layout_marginTop="@dimen/dp8"
            android:textColor="@color/forgetpass_color"
            android:textSize="@dimen/sp15" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/line_color" />

</RelativeLayout>
