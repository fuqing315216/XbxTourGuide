<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/version_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_tip_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp16">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现新版本"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp17" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新版本"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/new_versioncode_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <TextView
            android:id="@+id/new_versionmsg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="有新版本更新"
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/sp14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/update_cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="取消安装"
                android:textColor="@color/head_bg_color"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/update_submit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="立即安装"
                android:textColor="@color/head_bg_color"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
