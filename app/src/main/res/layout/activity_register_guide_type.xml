<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <include layout="@layout/view_step" />

    <LinearLayout
        android:id="@+id/llyt_guide_type1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:background="@drawable/bg_comment_style"
        android:orientation="horizontal"
        android:padding="@dimen/dp8">

        <TextView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_guide_type1_style"
            android:gravity="center"
            android:text="@string/guide_type1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp16"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/need_data"
                android:textSize="@dimen/sp12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/guide_type1_data"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_guide_type3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="@dimen/dp16"
        android:background="@drawable/bg_comment_style"
        android:orientation="horizontal"
        android:padding="@dimen/dp8">

        <TextView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_guide_type2_style"
            android:gravity="center"
            android:text="@string/guide_type2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp16"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/need_data"
                android:textSize="@dimen/sp12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/guide_other_data"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_guide_type2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:background="@drawable/bg_comment_style"
        android:orientation="horizontal"
        android:padding="@dimen/dp8">

        <TextView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_guide_type3_style"
            android:gravity="center"
            android:text="@string/guide_type3"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp16"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/need_data"
                android:textSize="@dimen/sp12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/guide_other_data"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>