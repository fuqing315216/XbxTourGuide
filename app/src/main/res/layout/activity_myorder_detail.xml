<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleImageView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/titlebar_order_detail"
        layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llyt_myorder_detail_button"
        android:layout_below="@id/titlebar_order_detail"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlyt_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginTop="@dimen/dp16">

                <com.xbx.tourguide.view.CircleImageView
                    android:id="@+id/civ_headpic"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/bg_color"
                    android:src="@drawable/ic_headpic"
                    CircleImageView:border_color="@color/head_with_color"
                    CircleImageView:border_width="2dp" />

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp16"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_phone_no" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_toLeftOf="@id/iv_phone"
                    android:layout_toRightOf="@id/civ_headpic"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小明"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp18" />

                    <TextView
                        android:id="@+id/tv_useradd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="青城山正门口"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlyt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlyt_user"
                android:layout_marginTop="30dp">

                <View
                    android:id="@+id/v_line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@color/line_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/bg_color"
                    android:paddingLeft="@dimen/dp12"
                    android:paddingRight="@dimen/dp12"
                    android:text="@string/order_details"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llyt_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlyt_status"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginTop="@dimen/dp12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_status"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="已完成"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp14" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llyt_order_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llyt_order_status"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginTop="@dimen/sp12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_time"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2小时"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp14" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llyt_person_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llyt_order_time"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginTop="@dimen/sp12"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顾客人数"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_person_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2-5人"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp14" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlyt_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llyt_person_num"
                android:layout_marginTop="20dp">

                <View
                    android:id="@+id/v_line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@color/line_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/bg_color"
                    android:paddingLeft="@dimen/dp12"
                    android:paddingRight="@dimen/dp12"
                    android:text="@string/pay_details"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/llyt_pay_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlyt_pay"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/llyt_cost_sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llyt_order_status"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/sp12"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cost_sum"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_cost_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="500元"
                        android:textColor="@color/forgetpass_color"
                        android:textSize="@dimen/sp14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llyt_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llyt_order_status"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/sp12"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fee"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="+50元"
                        android:textColor="@color/forgetpass_color"
                        android:textSize="@dimen/sp14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llyt_rebate_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llyt_fee"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/sp12"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/discount"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_rebate_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="-50元"
                        android:textColor="@color/forgetpass_color"
                        android:textSize="@dimen/sp14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llyt_cost_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llyt_rebate_money"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/sp12"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cost_total"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_cost_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="550元"
                        android:textColor="@color/forgetpass_color"
                        android:textSize="@dimen/sp14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llyt_myorder_detail_cancle_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llyt_cost_total"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/sp12"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_cancle_money_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="违约金"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_myorder_detail_cancle_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="10元"
                        android:textColor="@color/forgetpass_color"
                        android:textSize="@dimen/sp14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llyt_myorder_detail_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llyt_myorder_detail_cancle_money"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/sp12"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付定金"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_myorder_detail_deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="540元"
                        android:textColor="@color/forgetpass_color"
                        android:textSize="@dimen/sp14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llyt_pay_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llyt_myorder_detail_deposit"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/sp12"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pay_type"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="微信支付"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp14" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_myorder_detail_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llyt_pay_details"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rlyt_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <View
                        android:id="@+id/v_line3"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_marginRight="@dimen/dp16"
                        android:background="@color/line_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/bg_color"
                        android:paddingLeft="@dimen/dp12"
                        android:paddingRight="@dimen/dp12"
                        android:text="@string/TA_comment"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/sp14" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_comment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlyt_comment"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp16"
                    android:background="@drawable/bg_comment_style"
                    android:gravity="center"
                    android:padding="@dimen/dp8"
                    android:text="非常棒"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp12" />

                <com.xbx.tourguide.view.FlowLayout
                    android:id="@+id/flyt_myorder_detail_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_comment_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp12" />

                <RatingBar
                    android:id="@+id/rab_myorder_detail"
                    style="@style/bigStarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/flyt_myorder_detail_tag"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp16"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp16"
                    android:rating="3.5" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llyt_myorder_detail_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_refuse"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_refuse_style"
            android:text="@string/refuse"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp17" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_accept_style"
            android:text="@string/accept"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp17" />
    </LinearLayout>
</RelativeLayout>
