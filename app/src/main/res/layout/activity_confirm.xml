<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rlyt_confirm_remain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/white"
        android:paddingBottom="29dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="29dp">

        <TextView
            android:id="@+id/tv_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始服务"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_confirm_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_confirm_title"
            android:layout_marginTop="24dp"
            android:text="您确定要开始服务吗？"
            android:textColor="@color/text_gray_color"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_confirm_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_confirm_content"
            android:layout_marginTop="25dp"
            android:text="确认"
            android:textColor="@color/bg_verification_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_confirm_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_confirm_content"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@id/tv_confirm_ok"
            android:text="取消"
            android:textColor="@color/bg_verification_color"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>
