<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlyt_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@color/head_bg_color">

        <ImageButton
            android:id="@+id/ibtn_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:scaleType="center"
            android:src="@drawable/ic_return" />

        <TextView
            android:id="@+id/tv_header"
            style="@style/HeaderTextView"
            android:text="@string/balance" />

        <TextView
            android:id="@+id/tv_pay_details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:text="@string/pay_details"
            android:textColor="@color/head_text_color"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_balance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp24"
        android:text="@string/my_balance"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp15" />

    <TextView
        android:id="@+id/tv_my_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp12"
        android:text="Â¥123.00"
        android:textColor="@color/text_color"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn_recharge"
        style="@style/ButtonStyle"
        android:layout_marginTop="@dimen/dp40"
        android:text="@string/recharge" />

    <Button
        android:id="@+id/btn_deposit"
        style="@style/ButtonStyle"
        android:layout_marginTop="@dimen/dp12"
        android:background="@drawable/bg_deposit_style"
        android:text="@string/deposit"
        android:textColor="@color/text_color" />

</LinearLayout>
