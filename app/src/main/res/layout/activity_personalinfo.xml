<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlyt_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@color/head_bg_color">

        <ImageButton
            android:id="@+id/ibtn_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="@dimen/dp16"
            android:scaleType="center"
            android:src="@drawable/ic_return" />

        <TextView
            android:id="@+id/tv_header"
            style="@style/HeaderTextView"
            android:text="@string/personal_info" />

        <TextView
            android:id="@+id/tv_confirm_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="@dimen/dp16"
            android:text="@string/personal_main"
            android:textColor="@color/head_text_color"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/dp8">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp16"
                    android:text="@string/headpic"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp14" />

                <com.xbx.tourguide.view.CircleImageView
                    android:id="@+id/circle_head"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp8" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/name" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/TextViewStyle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp16"
                        android:text="@string/et_name" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/gender" />

                    <TextView
                        android:id="@+id/tv_sex"
                        style="@style/TextViewStyle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp16"
                        android:text="å¥³" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/birthday" />

                    <TextView
                        android:id="@+id/tv_birthday"
                        style="@style/TextViewStyle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp16"
                        android:text="1991/02/22" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/phone" />

                    <TextView
                        android:id="@+id/tv_phone"
                        style="@style/TextViewStyle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp16"
                        android:text="18888888888" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/card" />

                    <TextView
                        android:id="@+id/tv_id"
                        style="@style/TextViewStyle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp16"
                        android:text="123456789" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:id="@+id/rlyt_personalinfo_guide"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/tourist_no" />

                    <TextView
                        android:id="@+id/tv_guide"
                        style="@style/TextViewStyle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp16"
                        android:text="19910222" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:id="@+id/rlyt_location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/location" />

                    <TextView
                        android:id="@+id/tv_location"
                        style="@style/TextViewStyle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp16"
                        android:text="æé½" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48">

                    <TextView
                        android:id="@+id/tv_language"
                        style="@style/TextViewStyle"
                        android:text="@string/language" />

                    <!--<EditText-->
                    <!--android:id="@+id/et_language"-->
                    <!--style="@style/EditTextStyle"-->
                    <!--android:hint="@string/et_location" />-->

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp16"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_chinese"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:button="@null"
                            android:drawableLeft="@drawable/ic_gender_selected"
                            android:drawablePadding="@dimen/dp8"
                            android:text="@string/chinese"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/rb_english"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="@null"
                            android:button="@null"
                            android:checked="false"
                            android:drawableLeft="@drawable/ic_gender_normal"
                            android:drawablePadding="@dimen/dp8"
                            android:text="@string/english"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/rb_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="@null"
                            android:button="@null"
                            android:checked="false"
                            android:drawableLeft="@drawable/ic_gender_normal"
                            android:drawablePadding="@dimen/dp8"
                            android:text="@string/all"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />
                    </RadioGroup>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
