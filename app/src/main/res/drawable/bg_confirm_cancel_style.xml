<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 填充的颜色 -->
    <solid android:color="@android:color/white" />
    <!-- 设置矩形的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="5dip" />
    <stroke
        android:width="1px"
        android:color="#d6d7dc" />

    <padding
        android:bottom="6dp"
        android:left="0dp"
        android:right="0dp"
        android:top="6dp" />

</shape>
